{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "outDir": "./dist/server",
        "moduleResolution": "node",
        "strict": true,
        "sourceMap": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "noFallthroughCasesInSwitch": true,
        "rootDir": "./",
        "typeRoots": [
            "node_modules/@types"
        ],
        "skipLibCheck": true
    },
    "include": [
        "src/**/*",
        "supabase/**/*.ts",
        "data/**/*.json"
    ],
    "exclude": [
        "dist",
        "node_modules",
        "server.ts",
        "fetching_utility.ts",
        "fetching_utility_backend.ts",
        "MetaData.ts",
        "types.ts",
        "util/**"
    ]
}